<% content_for(:title, t(".title")) %>

<div class="legal-cont">
  <div id="triangle-legal-cont">
    <%= image_tag 'triangles/long-topR.svg', id: "legal-t1", class: "triangle" %>
    <%= image_tag 'triangles/idk.svg', id: "legal-t2", class: "triangle" %>
    <%= image_tag 'triangles/questionmrk.svg', id: "legal-t3", class: "triangle" %>
    <%= image_tag 'triangles/smallhoriz.svg', id: "legal-t4", class: "triangle" %>
    <%= image_tag 'triangles/L.svg', id: "legal-t5", class: "triangle" %>
    <%= image_tag 'triangles/3-horiz.svg', id: "legal-t6", class: "triangle" %>
  </div>
  <div class="legal-wrap">
    <h1 class="legal-pageheading"><%= t(".title") %></h1>
    <span class="legal-updated"><%= t(".last_updated", date: "26-09-2025") %></span>

    <div class="legal-section">
      <h1 class="legal-heading"><%= t(".operator.website_operator") %></h1>
      <span class="legal-text">
        [First name Last name or Company name]<br>
        [Legal form, e.g., GmbH / Sole proprietorship]<br>
        [Street + Number]<br>
        [Postal code City]<br>
        <%= t(".operator.country") %>
      </span>
    </div>

    <div class="legal-section">
      <h1 class="legal-heading"><%= t(".contact.contact") %></h1>
      <span class="legal-text">
        <%= t(".contact.phone", number: "[phone number]") %><br>
        <%= t(".contact.email", email: "[email address]") %><br>
        <%= t(".contact.website_html", website: link_to(t(".contact.website"), root_path)) %>
      </span>
    </div>

    <div class="legal-section">
      <h1 class="legal-heading"><%= t(".ar.authorized_representative") %></h1>
      <span class="legal-text">
        <%= t(".ar.ceo", name: "Alexander Fuchs") %>
      </span>
    </div>

    <div class="legal-section">
      <h1 class="legal-heading"><%= t(".cr.company_register") %></h1>
      <span class="legal-text">
        <%= t(".cr.commercial_register_number", crn: "[number]") %><br>
        <%= t(".cr.commercial_court", court: "[court]") %>
      </span>
    </div>

    <div class="legal-section">
      <h1 class="legal-heading"><%= t(".vat.vat_identification_number") %></h1>
      <span class="legal-text">
        <%= t(".vat.vat_id", uid: "[UID]") %>
      </span>
    </div>

    <div class="legal-section">
      <h1 class="legal-heading"><%= t(".rfc.responsible_for_content") %></h1>
      <span class="legal-text">
        Kr√ºmmelmonster, [Address]
      </span>
    </div>
  
    <div class="legal-section">
      <h1 class="legal-heading"><%= t(".lfc.liable_for_content") %></h1>
      <span class="legal-text">
        <%= t(".lfc.text") %>
      </span>
    </div>

    <div class="legal-section">
      <h1 class="legal-heading"><%= t(".copyright.copyright") %></h1>
      <span class="legal-text">
        <%= t(".copyright.disclaimer") %><br>
        <%= t(".copyright.sources") %><br>
        [Sources]
      </span>
    </div>

    <div class="legal-section">
      <h1 class="legal-heading"><%= t(".privacy.privacy_policy") %></h1>
      <span class="legal-text">
        <%= t(".privacy.text_html", link: link_to(t(".privacy.privacy_policy"), privacy_path)) %>
      </span>
    </div>
</div>