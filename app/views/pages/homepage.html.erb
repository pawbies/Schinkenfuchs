<div id="homepage-main">
  <div id="triangle-cont">
    <%= image_tag 'triangles/3-horiz.png', id: "t1", class: "triangle" %>
    <%= image_tag 'triangles/C.png', id: "t2", class: "triangle" %>
    <%= image_tag 'triangles/idk.png', id: "t3", class: "triangle" %>
    <%= image_tag 'triangles/tallL.png', id: "t4", class: "triangle" %>
    <%= image_tag 'triangles/smallhoriz.png', id: "t5", class: "triangle" %>
    <%= image_tag 'triangles/smallvert.png', id: "t6", class: "triangle" %>
    <%= image_tag 'triangles/L.png', id: "t7", class: "triangle" %>
    <%= image_tag 'triangles/questionmrk.png', id: "t8", class: "triangle" %>
    <%= image_tag 'triangles/b.png', id: "t9", class: "triangle" %>
    <%= image_tag 'triangles/long-topR.png', id: "t10", class: "triangle" %>
    <%= image_tag 'triangles/tallL.png', id: "t11", class: "triangle" %>
    <%= image_tag 'triangles/3-horiz.png', id: "t12", class: "triangle" %>
  </div>
  <div id="hmp-firstrow">
    <h1 id="hmp-heading">
      <span class="hmp-heading-wd"><%= t(".slogan.chill") %></span>
      <span class="hmp-heading-wd fancy"><%= t(".slogan.websites") %></span>
      <span class="hmp-heading-wd"><%= t(".slogan.for") %></span>
      <span class="hmp-heading-wd"><%= t(".slogan.you") %></span>
    </h1>
    <div id="hmp-pic">

    </div>
  </div>

  <div id="hmp-spacer"></div>

  <section data-controller="reveal" class="reveal pricing">
    <div class="hmp-card">
      <h2>STATIC</h2>
      <p class="hmp-subtitle">Simple websites</p>
      <p class="hmp-price">€99</p>
      <ul>
        <li>One page</li>
        <li>Fast & lightweight</li>
        <li>Basic styling</li>
      </ul>
      <button>Choose plan</button>
    </div>

    <div class="hmp-card hmp-featured">
      <h2>DYNAMIC</h2>
      <p class="hmp-subtitle">Interactive websites</p>
      <p class="hmp-price">€299</p>
      <ul>
        <li>Multi-page</li>
        <li>Custom components</li>
        <li>Backend integration</li>
      </ul>
      <button>Most popular</button>
    </div>

    <div class="hmp-card">
      <h2>Scalable</h2>
      <p class="hmp-subtitle">Scalable solutions</p>
      <p class="hmp-price">€599</p>
      <ul>
        <li>Unlimited pages</li>
        <li>Advanced features</li>
        <li>Priority support</li>
      </ul>
      <button>Choose plan</button>
    </div>
  </section>

  <section id="hmp-about">
    <div class="hmp-about-cont reveal" data-controller="reveal">
      <%= image_tag 'portfolio-dm.svg', width: 50, height: 50 %>
      <div class="hmp-about-text-wrap">
        <span class="hmp-about-text"><%= t(".about.portfolio") %></span>
        <span class="hmp-about-subtext"><%= t(".about.recent_work") %></span>
      </div>
    </div>

    <div class="hmp-about-cont reveal" 
         data-controller="reveal"
         data-reveal-class-value="is-visible reveal-slow">
      <%= image_tag 'testimonials-dm.svg', width: 50, height: 50 %>
      <div class="hmp-about-text-wrap">
        <span class="hmp-about-text"><%= t(".about.testimonials") %></span>
        <span class="hmp-about-subtext"><%= t(".about.what_our_clients_say") %></span>
      </div>
    </div>

    <div class="hmp-about-cont reveal" 
         data-controller="reveal"
         data-reveal-class-value="is-visible reveal-slower">
      <%= image_tag 'process-dm.svg', width: 50, height: 50 %>
      <div class="hmp-about-text-wrap">
        <span class="hmp-about-text"><%= t(".about.process") %></span>
        <span class="hmp-about-subtext"><%= t(".about.how_it_works") %></span>
      </div>
    </div>
  </section>

  <section id="hmp-contact"
           class="reveal"
           data-controller="reveal"
           data-reveal-class-value="is-visible reveal-slow">
    <span id="hmp-contact-text"> <%= t(".questions") %></span>
    <%= link_to t(".request_question"), root_path, id: "get-website" %>
  </section>

</div>